<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- TADA Admin Security Groups -->
        <record id="group_tada_admin_user" model="res.groups">
            <field name="name">TADA Admin User</field>
            <field name="comment">Basic user access to TADA Admin functionality</field>
        </record>

        <record id="group_tada_admin_manager" model="res.groups">
            <field name="name">TADA Admin Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_tada_admin_user'))]"/>
            <field name="comment">Manager access to TADA Admin with full CRUD operations</field>
        </record>

        <record id="group_tada_admin_admin" model="res.groups">
            <field name="name">TADA Admin Administrator</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('group_tada_admin_manager'))]"/>
            <field name="comment">Administrator access to TADA Admin with configuration rights</field>
            <!-- Assegna automaticamente l'utente amministratore al gruppo -->
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>