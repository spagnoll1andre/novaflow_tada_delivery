<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- POD Summary List View -->
    <record id="view_pod_summary_list" model="ir.ui.view">
        <field name="name">tada_admin.pod.summary.list</field>
        <field name="model">tada_admin.pod.summary</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="POD Summaries" default_order="last_activity_date desc">
                <header>
                    <button name="populate_from_all_requests" 
                            string="Populate from Requests" 
                            type="object" 
                            class="btn-primary"
                            help="Create POD summaries from all existing requests"
                            display="always"/>
                </header>
                <field name="pod_code" string="POD Code"/>
                <field name="customer_name" string="Customer"/>
                <field name="customer_fiscal_code" string="Fiscal Code"/>
                <field name="pod_status" string="Status" widget="badge" 
                       decoration-success="pod_status in ['association_associated', 'association_taken_in_charge']"
                       decoration-warning="pod_status in ['admissibility_pending', 'admissibility_awaiting', 'association_pending', 'association_awaiting', 'dissociation_pending', 'dissociation_awaiting', 'shipping_requested', 'shipping_dispatched']"
                       decoration-danger="pod_status in ['admissibility_refused', 'association_refused', 'dissociation_disassociated', 'customer_deleted', 'shipping_failed']"
                       decoration-info="pod_status in ['admissibility_admissible', 'shipping_delivered']"
                       decoration-muted="pod_status in ['customer_created', 'admissibility_not_admissible']"/>
                <field name="device_count" string="Devices"/>
                <field name="device_types" string="Device Types"/>
                <field name="association_count" string="Associations"/>
                <field name="latest_request_type" string="Latest Request"/>
                <field name="latest_request_status" string="Request Status"/>
                <field name="last_activity_date" string="Last Activity"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- POD Summary Form View -->
    <record id="view_pod_summary_form" model="ir.ui.view">
        <field name="name">tada_admin.pod.summary.form</field>
        <field name="model">tada_admin.pod.summary</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="POD Summary">
                <header>
                    <button name="action_refresh_from_chain2gate" 
                            string="Refresh from Chain2Gate" 
                            type="object" 
                            class="btn-primary"
                            icon="fa-refresh"/>
                    <field name="pod_status" widget="statusbar" 
                           statusbar_visible="customer_created,admissibility_pending,admissibility_admissible,association_pending,association_associated,dissociation_disassociated"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_customer" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-user">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Customer</span>
                                <span class="o_stat_value">
                                    <field name="customer_name"/>
                                </span>
                            </div>
                        </button>
                        
                        <button name="action_view_devices" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-microchip">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="device_count"/>
                                </span>
                                <span class="o_stat_text">Devices</span>
                            </div>
                        </button>
                        
                        <button name="action_view_association_requests" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-link">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="association_count"/>
                                </span>
                                <span class="o_stat_text">Associations</span>
                            </div>
                        </button>
                        
                        <button name="action_view_admissibility_requests" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-check-circle">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="admissibility_count"/>
                                </span>
                                <span class="o_stat_text">Admissibility</span>
                            </div>
                        </button>
                        
                        <button name="action_view_disassociation_requests" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-unlink">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="disassociation_count"/>
                                </span>
                                <span class="o_stat_text">Disassociations</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                        <h3>
                            <field name="pod_code" readonly="1"/>
                        </h3>
                    </div>

                    <group>
                        <group name="pod_info" string="POD Information">
                            <field name="pod_code"/>
                            <field name="pod_status" widget="badge"/>
                            <field name="has_active_associations"/>
                            <field name="last_activity_date"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        
                        <group name="customer_info" string="Customer Information">
                            <field name="customer_id" widget="many2one_button"/>
                            <field name="customer_fiscal_code"/>
                            <field name="customer_name"/>
                            <field name="customer_email" widget="email"/>
                            <field name="customer_user_type"/>
                        </group>
                    </group>

                    <group name="device_info" string="Device Information">
                        <group>
                            <field name="device_count"/>
                            <field name="device_types"/>
                            <field name="primary_device_id" widget="many2one_button"/>
                        </group>
                    </group>

                    <group name="latest_request" string="Latest Request Information">
                        <group>
                            <field name="latest_request_type"/>
                            <field name="latest_request_status"/>
                            <field name="latest_request_date"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Associated Devices" name="devices">
                            <field name="device_ids" mode="list" readonly="1">
                                <list string="Devices">
                                    <field name="device_id"/>
                                    <field name="type_name"/>
                                    <field name="status"/>
                                    <field name="active"/>
                                    <field name="last_sync"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Admissibility Requests" name="admissibility">
                            <field name="admissibility_request_ids" mode="list" readonly="1">
                                <list string="Admissibility Requests">
                                    <field name="request_id"/>
                                    <field name="status"/>
                                    <field name="message"/>
                                    <field name="created_at"/>
                                    <field name="closed_at"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Association Requests" name="associations">
                            <field name="association_request_ids" mode="list" readonly="1">
                                <list string="Association Requests">
                                    <field name="request_id"/>
                                    <field name="serial"/>
                                    <field name="pod_m_type"/>
                                    <field name="user_type"/>
                                    <field name="status"/>
                                    <field name="created_at"/>
                                    <field name="closed_at"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Disassociation Requests" name="disassociations">
                            <field name="disassociation_request_ids" mode="list" readonly="1">
                                <list string="Disassociation Requests">
                                    <field name="request_id"/>
                                    <field name="serial"/>
                                    <field name="pod_m_type"/>
                                    <field name="status"/>
                                    <field name="created_at"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- POD Summary Search View -->
    <record id="view_pod_summary_search" model="ir.ui.view">
        <field name="name">POD Summary Search</field>
        <field name="model">tada_admin.pod.summary</field>
        <field name="arch" type="xml">
            <search string="Search POD Summaries">
                <field name="pod_code" string="POD Code" 
                       filter_domain="[('pod_code', 'ilike', self)]"/>
                <field name="customer_name" string="Customer Name" 
                       filter_domain="[('customer_name', 'ilike', self)]"/>
                <field name="customer_fiscal_code" string="Fiscal Code" 
                       filter_domain="[('customer_fiscal_code', 'ilike', self)]"/>
                <field name="customer_email" string="Email" 
                       filter_domain="[('customer_email', 'ilike', self)]"/>
                <field name="device_types" string="Device Types" 
                       filter_domain="[('device_types', 'ilike', self)]"/>
                
                <separator/>
                
                <!-- Status filters by lifecycle stage -->
                <filter name="customer_created" string="Customer Created" 
                        domain="[('pod_status', '=', 'customer_created')]"/>
                <filter name="admissibility_stage" string="Admissibility Stage" 
                        domain="[('pod_status', 'in', ['admissibility_pending', 'admissibility_awaiting', 'admissibility_admissible', 'admissibility_not_admissible', 'admissibility_refused'])]"/>
                <filter name="shipping_stage" string="Shipping Stage" 
                        domain="[('pod_status', 'in', ['shipping_requested', 'shipping_dispatched', 'shipping_failed', 'shipping_delivered'])]"/>
                <filter name="association_stage" string="Association Stage" 
                        domain="[('pod_status', 'in', ['association_pending', 'association_awaiting', 'association_associated', 'association_taken_in_charge', 'association_refused'])]"/>
                <filter name="dissociation_stage" string="Dissociation Stage" 
                        domain="[('pod_status', 'in', ['dissociation_pending', 'dissociation_awaiting', 'dissociation_disassociated'])]"/>
                
                <separator/>
                
                <!-- Quick status filters -->
                <filter name="active_associations" string="Active Associations" 
                        domain="[('pod_status', 'in', ['association_associated', 'association_taken_in_charge'])]"/>
                <filter name="pending_requests" string="Pending Requests" 
                        domain="[('pod_status', 'in', ['admissibility_pending', 'association_pending', 'dissociation_pending'])]"/>
                <filter name="refused_requests" string="Refused/Failed" 
                        domain="[('pod_status', 'in', ['admissibility_refused', 'association_refused', 'shipping_failed'])]"/>
                <filter name="completed" string="Completed/Disassociated" 
                        domain="[('pod_status', '=', 'dissociation_disassociated')]"/>
                
                <separator/>
                
                <filter name="has_devices" string="Has Devices" 
                        domain="[('device_count', '>', 0)]"/>
                <filter name="no_devices" string="No Devices" 
                        domain="[('device_count', '=', 0)]"/>
                <filter name="has_active_associations" string="Active Associations" 
                        domain="[('has_active_associations', '=', True)]"/>
                
                <separator/>
                
                <filter name="prosumer" string="Prosumer" 
                        domain="[('customer_user_type', '=', 'PROSUMER')]"/>
                <filter name="consumer" string="Consumer" 
                        domain="[('customer_user_type', '=', 'CONSUMER')]"/>
                
                <separator/>
                
                <filter name="recent_activity" string="Recent Activity (7 days)" 
                        domain="[('last_activity_date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter name="old_activity" string="Old Activity (>30 days)" 
                        domain="[('last_activity_date', '&lt;', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                
                <separator/>
                
                <group expand="0" string="Group By">
                    <filter name="group_by_status" string="Status" 
                            context="{'group_by': 'pod_status'}"/>
                    <filter name="group_by_customer_type" string="Customer Type" 
                            context="{'group_by': 'customer_user_type'}"/>
                    <filter name="group_by_device_types" string="Device Types" 
                            context="{'group_by': 'device_types'}"/>
                    <filter name="group_by_company" string="Company" 
                            context="{'group_by': 'company_id'}" 
                            groups="base.group_multi_company"/>
                    <filter name="group_by_latest_request" string="Latest Request Type" 
                            context="{'group_by': 'latest_request_type'}"/>
                </group>
            </search>
        </field>
    </record>


    <!-- POD Summary Action -->
    <record id="action_pod_summary" model="ir.actions.act_window">
        <field name="name">POD Summaries</field>
        <field name="res_model">tada_admin.pod.summary</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_pod_summary_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first POD Summary!
            </p>
            <p>
                POD Summaries provide a comprehensive view of all information related to specific PODs (Points of Delivery).
                Each summary shows customer details, associated devices, and complete request history for a POD.
            </p>
        </field>
    </record>

    <!-- POD Summary Action for Active PODs -->
    <record id="action_pod_summary_active" model="ir.actions.act_window">
        <field name="name">Active PODs</field>
        <field name="res_model">tada_admin.pod.summary</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_pod_summary_search"/>
        <field name="domain">[('pod_status', 'in', ['association_associated', 'association_taken_in_charge'])]</field>
        <field name="context">{}</field>
    </record>

    <!-- POD Summary Action for Pending PODs -->
    <record id="action_pod_summary_pending" model="ir.actions.act_window">
        <field name="name">Pending PODs</field>
        <field name="res_model">tada_admin.pod.summary</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_pod_summary_search"/>
        <field name="domain">[('pod_status', 'in', ['admissibility_pending', 'association_pending', 'dissociation_pending'])]</field>
        <field name="context">{}</field>
    </record>

    <!-- POD Summaries Menu -->
    <menuitem id="menu_tada_admin_pod_summaries" 
              name="POD Summaries" 
              parent="menu_tada_admin_main" 
              action="action_pod_summary" 
              sequence="25"/>

</odoo>