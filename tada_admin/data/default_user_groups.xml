<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Auto-assign TADA Admin groups to system users -->
        
        <!-- Give admin users access to TADA Admin -->
        <record id="base.user_admin" model="res.users">
            <field name="groups_id" eval="[(4, ref('tada_admin.group_tada_admin_admin'))]"/>
        </record>
        
        <!-- Give demo user access as Manager -->
        <record id="base.user_demo" model="res.users">
            <field name="groups_id" eval="[(4, ref('tada_admin.group_tada_admin_manager'))]"/>
        </record>
        
    </data>
</odoo>